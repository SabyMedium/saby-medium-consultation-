// ========================================
// FICHIER 1 : src/main.jsx
// ========================================
import React from 'react';
import ReactDOM from 'react-dom/client';
import App from './App';

ReactDOM.createRoot(document.getElementById('root')).render(
  <React.StrictMode>
    <App />
  </React.StrictMode>
);

// ========================================
// FICHIER 2 : src/App.jsx
// ========================================
import React, { useState, useEffect } from 'react';
import { Phone, Clock, Euro, Video, CheckCircle, XCircle } from 'lucide-react';

const App = () => {
  const [isAdmin, setIsAdmin] = useState(false);
  const [isOnline, setIsOnline] = useState(false);
  const [amount, setAmount] = useState(10);
  const [callActive, setCallActive] = useState(false);
  const [timeRemaining, setTimeRemaining] = useState(0);
  const [jitsiRoom, setJitsiRoom] = useState('');
  const [adminPassword, setAdminPassword] = useState('');
  const [isAuthenticated, setIsAuthenticated] = useState(false);

  const RATE_PER_MINUTE = 1;
  const MIN_AMOUNT = 10;
  const ADMIN_PASSWORD = 'saby2024'; // Change ce mot de passe !

  const minutes = Math.floor(amount / RATE_PER_MINUTE);

  useEffect(() => {
    if (callActive && timeRemaining > 0) {
      const timer = setInterval(() => {
        setTimeRemaining(prev => {
          if (prev <= 1) {
            endCall();
            return 0;
          }
          return prev - 1;
        });
      }, 1000);
      return () => clearInterval(timer);
    }
  }, [callActive, timeRemaining]);

  const formatTime = (seconds) => {
    const mins = Math.floor(seconds / 60);
    const secs = seconds % 60;
    return `${mins}:${secs.toString().padStart(2, '0')}`;
  };

  const handleAdminLogin = () => {
    if (adminPassword === ADMIN_PASSWORD) {
      setIsAuthenticated(true);
      setIsAdmin(true);
    } else {
      alert('Mot de passe incorrect !');
    }
  };

  const handlePayment = async () => {
    // ICI : Int√©gration Stripe (on va l'ajouter apr√®s)
    const confirmed = confirm(`Confirmer le paiement de ${amount}‚Ç¨ pour ${minutes} minute(s) de consultation ?`);
    
    if (confirmed) {
      const roomId = `saby-${Date.now()}`;
      setJitsiRoom(roomId);
      setTimeRemaining(minutes * 60);
      setCallActive(true);
      
      // Notification par email (on ajoutera SendGrid apr√®s)
      console.log('Email envoy√© : Nouvelle consultation de', amount, '‚Ç¨');
    }
  };

  const endCall = () => {
    setCallActive(false);
    setTimeRemaining(0);
    setJitsiRoom('');
  };

  // √âcran de connexion Admin
  if (isAdmin && !isAuthenticated) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-purple-900 via-purple-800 to-indigo-900 p-6 flex items-center justify-center">
        <div className="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full">
          <h2 className="text-2xl font-bold text-purple-900 mb-6 text-center">üîí Connexion Admin</h2>
          <input
            type="password"
            placeholder="Mot de passe"
            value={adminPassword}
            onChange={(e) => setAdminPassword(e.target.value)}
            onKeyPress={(e) => e.key === 'Enter' && handleAdminLogin()}
            className="w-full px-4 py-3 border-2 border-purple-300 rounded-xl mb-4 focus:outline-none focus:border-purple-500"
          />
          <button
            onClick={handleAdminLogin}
            className="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 rounded-xl"
          >
            Se connecter
          </button>
          <button
            onClick={() => setIsAdmin(false)}
            className="w-full mt-3 text-gray-600 hover:text-gray-800"
          >
            ‚Üê Retour
          </button>
        </div>
      </div>
    );
  }

  // Vue ADMIN
  if (isAdmin && isAuthenticated) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-purple-900 via-purple-800 to-indigo-900 p-6">
        <div className="max-w-2xl mx-auto">
          <div className="bg-white rounded-2xl shadow-2xl p-8">
            <h1 className="text-3xl font-bold text-purple-900 mb-2">Tableau de bord Admin</h1>
            <p className="text-gray-600 mb-6">Gestion de vos consultations</p>

            <div className="bg-purple-50 rounded-xl p-6 mb-6">
              <div className="flex items-center justify-between mb-4">
                <span className="text-lg font-semibold text-purple-900">Statut actuel :</span>
                <div className="flex items-center gap-2">
                  {isOnline ? (
                    <CheckCircle className="text-green-500" size={24} />
                  ) : (
                    <XCircle className="text-red-500" size={24} />
                  )}
                  <span className={`font-bold ${isOnline ? 'text-green-600' : 'text-red-600'}`}>
                    {isOnline ? 'EN LIGNE' : 'HORS LIGNE'}
                  </span>
                </div>
              </div>

              <button
                onClick={() => setIsOnline(!isOnline)}
                className={`w-full py-4 rounded-xl font-bold text-white text-lg transition-all ${
                  isOnline 
                    ? 'bg-red-500 hover:bg-red-600' 
                    : 'bg-green-500 hover:bg-green-600'
                }`}
              >
                {isOnline ? 'üî¥ Se mettre HORS LIGNE' : 'üü¢ Se mettre EN LIGNE'}
              </button>
            </div>

            {callActive && (
              <div className="bg-green-50 border-2 border-green-500 rounded-xl p-6 mb-6">
                <div className="flex items-center justify-between mb-4">
                  <span className="text-green-800 font-bold">üî¥ APPEL EN COURS</span>
                  <span className="text-2xl font-mono font-bold text-green-600">
                    {formatTime(timeRemaining)}
                  </span>
                </div>
                <a
                  href={`https://meet.jit.si/${jitsiRoom}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  className="block w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 rounded-xl text-center mb-3"
                >
                  üìπ Rejoindre l'appel Jitsi
                </a>
                <button
                  onClick={endCall}
                  className="w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 rounded-xl"
                >
                  Terminer l'appel
                </button>
              </div>
            )}

            <button
              onClick={() => {
                setIsAdmin(false);
                setIsAuthenticated(false);
                setAdminPassword('');
              }}
              className="w-full py-3 bg-gray-200 hover:bg-gray-300 rounded-xl font-semibold text-gray-700"
            >
              ‚Üê Voir la page client
            </button>
          </div>
        </div>
      </div>
    );
  }

  // Vue CLIENT
  return (
    <div className="min-h-screen bg-gradient-to-br from-purple-900 via-purple-800 to-indigo-900 p-6">
      <div className="max-w-2xl mx-auto">
        <div className="bg-white rounded-2xl shadow-2xl overflow-hidden">
          <div className="bg-gradient-to-r from-purple-600 to-indigo-600 p-8 text-white text-center">
            <h1 className="text-4xl font-bold mb-2">üîÆ Saby M√©dium</h1>
            <p className="text-purple-100 text-lg">Consultation spirituelle en ligne</p>
          </div>

          <div className="p-6 bg-gray-50 border-b">
            <div className="flex items-center justify-center gap-3">
              <div className={`w-4 h-4 rounded-full ${isOnline ? 'bg-green-500 animate-pulse' : 'bg-red-500'}`}></div>
              <span className={`font-bold text-lg ${isOnline ? 'text-green-600' : 'text-red-600'}`}>
                {isOnline ? 'Disponible maintenant' : 'Actuellement indisponible'}
              </span>
            </div>
          </div>

          {callActive ? (
            <div className="p-8">
              <div className="bg-green-50 border-2 border-green-500 rounded-xl p-8 text-center">
                <Video className="mx-auto text-green-600 mb-4" size={48} />
                <h2 className="text-2xl font-bold text-green-800 mb-4">Consultation en cours</h2>
                
                <div className="bg-white rounded-xl p-6 mb-6">
                  <div className="text-sm text-gray-600 mb-2">Temps restant</div>
                  <div className="text-5xl font-mono font-bold text-green-600">
                    {formatTime(timeRemaining)}
                  </div>
                </div>

                <a
                  href={`https://meet.jit.si/${jitsiRoom}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  className="block w-full bg-green-500 hover:bg-green-600 text-white font-bold py-4 rounded-xl text-lg"
                >
                  üìπ Rejoindre l'appel vid√©o
                </a>
              </div>
            </div>
          ) : (
            <div className="p-8">
              <h2 className="text-2xl font-bold text-gray-800 mb-4">R√©server une consultation</h2>
              
              <div className="bg-purple-50 rounded-xl p-6 mb-6">
                <div className="flex items-center gap-2 text-purple-800 mb-3">
                  <Clock size={20} />
                  <span className="font-semibold">Tarif : 1‚Ç¨ par minute</span>
                </div>
                <p className="text-sm text-gray-600">Minimum 10‚Ç¨ (10 minutes)</p>
              </div>

              <div className="mb-6">
                <label className="block text-gray-700 font-semibold mb-3">
                  Montant √† payer (minimum 10‚Ç¨)
                </label>
                <div className="relative">
                  <input
                    type="number"
                    min={MIN_AMOUNT}
                    value={amount}
                    onChange={(e) => setAmount(Math.max(MIN_AMOUNT, parseInt(e.target.value) || MIN_AMOUNT))}
                    className="w-full px-4 py-4 text-2xl font-bold border-2 border-purple-300 rounded-xl focus:outline-none focus:border-purple-500 pr-12"
                    disabled={!isOnline}
                  />
                  <Euro className="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400" size={28} />
                </div>
              </div>

              <div className="bg-indigo-50 rounded-xl p-6 mb-6">
                <div className="text-center">
                  <div className="text-sm text-gray-600 mb-1">Dur√©e de la consultation</div>
                  <div className="text-4xl font-bold text-indigo-600">
                    {minutes} minute{minutes > 1 ? 's' : ''}
                  </div>
                </div>
              </div>

              <button
                onClick={handlePayment}
                disabled={!isOnline || amount < MIN_AMOUNT}
                className={`w-full py-4 rounded-xl font-bold text-white text-lg transition-all ${
                  isOnline && amount >= MIN_AMOUNT
                    ? 'bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700'
                    : 'bg-gray-300 cursor-not-allowed'
                }`}
              >
                {isOnline ? 'üí≥ Payer et d√©marrer' : '‚è∏Ô∏è Indisponible'}
              </button>
            </div>
          )}

          <div className="p-4 bg-gray-100 text-center">
            <button
              onClick={() => setIsAdmin(true)}
              className="text-xs text-gray-400 hover:text-gray-600"
            >
              Admin
            </button>
          </div>
        </div>
      </div>
    </div>
  );
};

export default App;
import { defineConfig } from 'vite'
import react from '@vitejs/plugin-react'

export default defineConfig({
  plugins: [react()],
})
